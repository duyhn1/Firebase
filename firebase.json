{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/xuxi",
        "destination": "/xuxi.html"
      },
      {
        "source": "/ready",
        "function": "ready"
      },
      {
        "source": "/submit",
        "function": "submit"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
